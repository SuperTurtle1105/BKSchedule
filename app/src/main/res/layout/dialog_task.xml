<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_Diaglog_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/task_item_horizontal_margin"
        android:layout_marginTop="2dp"
        android:layout_marginRight="@dimen/task_item_horizontal_margin"
        android:text="Hop nhom"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_Diaglog_Location"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/task_item_horizontal_margin"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/task_item_horizontal_margin"
        android:text="Hella H6"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_Diaglog_Decreption"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/task_item_horizontal_margin"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/task_item_horizontal_margin"
        android:text="Ve Use-case"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/task_item_horizontal_margin"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/task_item_horizontal_margin"
        android:layout_marginBottom="5dp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Diaglog_Time"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:text="12h - 15h"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_Diaglog_Aler"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="15 phut"
            android:textSize="16sp" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_Diaglog_Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="8dp"
            android:text="Chỉnh sửa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_Diaglog_Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="72dp"
            android:text="xóa"
            app:layout_constraintStart_toEndOf="@+id/button_Diaglog_Edit"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/dialogSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="4dp"
            android:switchMinWidth="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_Diaglog_Delete" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
